# 数据库配置 - 优化连接池参数（任务1：连接上限提升至60）
DATABASE_URL="postgresql://username:password@host:port/database?schema=public&connection_limit=60&pool_timeout=60&connect_timeout=20&statement_timeout=30000&idle_timeout=300"
DIRECT_URL="postgresql://username:password@host:port/database?schema=public"

# NextAuth配置
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key"

# GitHub OAuth
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Supabase配置
NEXT_PUBLIC_SUPABASE_URL="your-supabase-url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# Redis缓存配置（可选）
REDIS_URL="redis://localhost:6379"
UPSTASH_REDIS_REST_URL="your-upstash-redis-url"
UPSTASH_REDIS_REST_TOKEN="your-upstash-redis-token"

# 性能优化配置
DATABASE_CONNECTION_LIMIT=60
DATABASE_POOL_TIMEOUT=30000
DATABASE_QUERY_TIMEOUT=30000
ENABLE_DATABASE_MONITORING=true

# CDN配置（可选）
CLOUDFLARE_ZONE_ID="your-cloudflare-zone-id"
CLOUDFLARE_API_TOKEN="your-cloudflare-api-token"

# 开发环境配置
NODE_ENV="development"
ENABLE_DEBUG_LOGS=true
